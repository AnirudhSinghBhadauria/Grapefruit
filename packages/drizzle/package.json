{
  "name": "@chat/drizzle",
  "version": "1.0.0",
  "private": true,
  "main": "dist/index.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "scripts": {
    "studio": "pnpm drizzle-kit studio --port 4092",
    "drizzle:push": "npx drizzle-kit push:pg",
    "main:generate": "dotenv drizzle-kit generate:pg --schema ./src/schema/main.ts --out=./src/migrations",
    "main:migrate": "dotenv npx tsx ./src/migrate.ts",
    "build": "tsup src/index.ts --format cjs --dts",
    "start": "dotenv node dist/index",
    "dev": "npm run build -- --watch"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/pg": "^8.11.2",
    "dotenv-cli": "^7.3.0",
    "drizzle-kit": "^0.20.14",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "drizzle-orm": "^0.29.4",
    "pg": "^8.11.3",
    "postgres": "^3.4.3",
    "tsup": "^8.0.2"
  }
}
